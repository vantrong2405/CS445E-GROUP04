@model ProductCreateVM

@{
    ViewBag.Title = "Product Create";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
</div>

<div class="card-body p-4">
    <form method="post" class="row" enctype="multipart/form-data">
        <div class="border p-3">
            @*<div asp-validation-summary="ModelOnly"></div>*@
            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.Title" type="text" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.Title" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.Title" class="text-danger"></span>
            </div>
            <div class="py-2 col-12">
                <label asp-for="ProductAddRequest.Description" class="ms-2 text-muted"></label>
                <textarea asp-for="ProductAddRequest.Description" type="text" class="form-control border-0 shadow"></textarea>
                <span asp-validation-for="ProductAddRequest.Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.ISBN" type="text" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.ISBN" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.Author" type="text" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.Author" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.Author" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.ListPrice" type="number" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.ListPrice" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.ListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.Price" type="number" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.Price" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.Price" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.Price50" type="number" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.Price50" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.Price50" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="ProductAddRequest.Price100" type="number" class="form-control border-0 shadow" />
                <label asp-for="ProductAddRequest.Price100" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.Price100" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="File" type="file" class="form-control border-0 shadow" />
                <label asp-for="File" class="ms-2"></label>
            </div>

            <div class="form-floating py-2 col-12">
                <select asp-for="ProductAddRequest.CategoryId" asp-items="ViewBag.Categories" class="form-select border-0 shadow">
                    <option disabled selected>--Select Category--</option>
                </select>
                <label asp-for="ProductAddRequest.CategoryId" class="ms-2"></label>
                <span asp-validation-for="ProductAddRequest.CategoryId" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
