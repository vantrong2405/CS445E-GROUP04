@model IEnumerable<CompanyResponse>

@{
    ViewBag.Title = "Company Home";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Companies List</h2>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create new company
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Phone Number</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>
                    @company.StreetAddress
                </td>
                <td>
                    @company.City
                </td>
                <td>
                    @company.State
                </td>
                <td>
                    @company.PhoneNumber
                </td>
                <td>
                    <div class="btn-group d-flex justify-content-between align-items-center" role="button">
                        <a asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-companyId="@company.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-area="Admin" asp-controller="Company" asp-action="Delete" asp-route-companyId="@company.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

