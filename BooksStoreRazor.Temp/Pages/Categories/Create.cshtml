@page
@model BooksStoreRazor.Temp.Pages.Categories.CreateModel
@{
    ViewBag.Title = "Category Create";
}

<form asp-asp-page="/Categories/Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        <input asp-for="Category.Id" type="hidden" />

        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0">Category Name</label>
            <input asp-for="Category.Name" type="text" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="Category.DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    Create
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-asp-page="/Categories/Index" class="btn btn-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>
<div asp-validation-summary="All" class="text-danger pt-3"></div>
